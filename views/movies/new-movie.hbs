<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1 style="margin-bottom: 20px">Create a new Movie</h1>
      <hr />

      <form action="/movies/create" method="POST" style="margin-top: 20px">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" />
        </div>
        <div class="mb-3">
          <label for="genre" class="form-label">Genre</label>
          <input type="text" class="form-control" id="genre" name="genre" />
        </div>
        <div class="mb-3">
          <div class="form-group">
            <label for="plot" class="form-label">Plot</label>
            <textarea
              class="form-control"
              id="plot"
              name="plot"
              rows="5"
            ></textarea>
          </div>
        </div>

        <div class="mb-3" id="myForm">

          <label for="cast">Select a cast members:</label>
          <select name="cast" id="cast" multiple>
            {{#each celebrity}}
              <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="d-grid">
          <button
            type="submit"
            class="btn btn-success"
            style="margin-right:20px"
          >Create</button>
          <a href="/movies" class="btn btn-secondary"> Cancel</a>
        </div>

      </form>
    </div>
  </div>
</div>