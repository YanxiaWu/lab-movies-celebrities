<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1 style="margin-bottom: 20px">Edit the Movie</h1>
      <hr />

      <form
        action="/movies/{{movie._id}}/edit"
        method="POST"
        style="margin-top: 20px"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="{{movie.title}}"
          />
        </div>

        <div class="mb-3">
          <label for="genre" class="form-label">Genre</label>
          <input
            type="text"
            class="form-control"
            id="genre"
            name="genre"
            value="{{movie.genre}}"
          />
        </div>

        <div class="mb-3">
          <div class="form-group">
            <label for="plot" class="form-label">Plot</label>
            <textarea
              class="form-control"
              id="plot"
              name="plot"
              rows="5"
            >{{movie.plot}}</textarea>
          </div>
        </div>

        <div>
          <ul>
            Autores present
            {{#each movie.cast}}
              <li>{{name}}</li>
            {{/each}}
          </ul>
        </div>

        <div class="mb-3" id="myForm">

          <label for="cast">Select a cast members:</label>
          <select name="cast" id="cast" multiple>
            {{#each celebrities}}
              <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>

        <div class="d-grid">
          <button
            type="submit"
            class="btn btn-success"
            style="margin-right:20px"
          >Update</button>
          <a href="/movies" class="btn btn-secondary">
            Cancel and Back to the Movie List</a>
        </div>

      </form>
    </div>
  </div>
</div>